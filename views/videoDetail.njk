{% import "macros/videoBlock.njk" as videoBlock %}

{% extends "layouts/main.njk" %}

{% block content %}

    <div class='container'>
        {{videoBlock.detail(video, loggedUser)}}
    </div>

    <div>
        <h5>comments</h5>
        <form id="commentInput">
            <input type="text" name='comment' placeholder='add your comments'>
        </form>
        <ul id='comment-list'>
            {% for comment in video.comments | reverse%}
                <span>
                    <li>{{comment.text}}
                        {% if comment.creator == user.id %}
                            <i class="fas fa-trash delete-icon" data-src='{{comment.id}}'></i>
                        {% endif %}
                    </li>
                </span>
            {% endfor %}
        </ul>
    </div>

{% endblock %}