{% macro join() %}
    <div class='join-container'>
        <h1>Join</h1>
        <form action="/join" method='post' class='join-form'>
            <input type="text" placeholder='name' name='name' required="required">
            <input type="email" placeholder='email' name='email' required="required">
            <input type="password" placeholder='password' name='password' required="required">
            <input type="password" placeholder='confirm password' name='password2' required="required">
            <button>Join now</button>
        </form>
    </div>
{% endmacro %}

{% macro login() %}
    <div class='login-container'>
        <h1>Login</h1>
        <form action="/login" method='post'>
            <input type="email" placeholder='email' name='email' required="required">
            <input type="password" placeholder='password' name='password' required="required">
            <button>Login</button>
        </form>
        <a href="/auth/github">
            <button>Login with Github</button>
        </a>
    </div>
{% endmacro %}

{% macro upload() %}
    <div class='upload-form'>
        <h1>Upload</h1>
        <form action="/upload" method='post' enctype="multipart/form-data" style='display: flex; flex-direction: column'>
            <div>
                <label for="file">video file</label>
                <input type="file" id='file' name='videoFile' accept='video/*' required="required">
            </div>
            <input type="text" placeholder='title' name='title' required="required">
            <textarea name='description' placeholder='description' required="required"></textarea>
            <button>Upload Video</button>
        </form>
    </div>
{% endmacro %}

{% macro editVideo(video = {}) %}
    <form action="/videos/{{video.id}}/edit" method='post' class='edit-video-form'>
        <input type="text" name='title' value="{{video.title}}">
        <textarea name='description'>{{video.description}}</textarea>
        <button>edit video</button>
    </form>
    <form action="/videos/{{video.id}}/delete" method='post'>
        <button class='delete-btn'>delete video</button>
    </form>
{% endmacro %}