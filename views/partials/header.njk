<header class="row u-full-width" style="margin: 12px;">
    <div class="four columns" style="">
        <a href="/" style="color: #000; text-decoration: none; font-size: 2.2rem; font-weight: 600;">Reminder</a>
    </div>

    <form action="/search" method='get' class="four columns" style="display:flex; justify-content: center;">
        <input type="text" placeholder='search' name='keyword' class='u-full-width'>
    </form>
    <div class="four columns" style="margin-top: 0.8rem;">
        {% if loggedUser %}
            <nav>
                <a href="/upload" style="text-decoration: none;">Upload</a>
                <a href="/profile/{{loggedUser.id}}" style="text-decoration: none; margin-left: 1rem;">Profile</a>
                <a href="/logout" style="text-decoration: none;margin-left: 1rem;">Log out</a>
            </nav>
        {% else %}
            <nav>
                <a href="/login" style="text-decoration: none; ">Log in</a>
                <a href="/join" style="text-decoration: none; margin-left: 1rem;">Join</a>
            </nav>
        {% endif %}
    </div>
</header>